<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Spinner for selecting terms -->
    <Spinner
        android:id="@+id/termsSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:spinnerMode="dropdown" />

    <!-- TextView to display courses and their notes/todo counts -->
    <TextView
        android:id="@+id/coursesTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/termsSpinner"
        android:layout_marginTop="24dp"
        android:textSize="16sp"
        android:textColor="#000000"
        android:padding="8dp"
        android:scrollbars="vertical"
        android:text="Select a term to view courses..." />

</RelativeLayout>
